{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "public/js/",
        "paths": {
            "*": [
                "../node_modules/*"
            ]
        }
    },
    "include": [
        "typescripts/*"
    ]
}